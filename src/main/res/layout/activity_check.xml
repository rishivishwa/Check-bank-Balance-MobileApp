<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF533"
    android:orientation="vertical"
    android:textAlignment="center"
    tools:context=".check">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="500dp"
        android:orientation="vertical" />

    <TextView
        android:id="@+id/numberEt"
        android:layout_width="344dp"
        android:layout_height="84dp"
        android:layout_gravity="center"
        android:layout_marginTop="-450dp"
        android:background="#E1AF58"
        android:backgroundTint="#54EAE5"
        android:ems="10"
        android:text="Your bank number is "
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.413" />

    <Button
        android:id="@+id/dialButton"
        android:layout_width="143dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="call"
        android:textSize="20sp"
        app:icon="@android:drawable/stat_notify_missed_call"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.55" />

    <Button
        android:id="@+id/smsbutton"
        android:layout_width="260dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="0dp"
        android:text="Show Balance" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="377dp"
        android:layout_height="37dp"
        android:layout_gravity="center"
        android:layout_marginTop="30px"
        android:text="Address :" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="377dp"
        android:layout_height="155dp"
        android:layout_gravity="center"
        android:layout_marginTop="30px"
        android:text="Bank Balance" />

    <EditText
        android:id="@+id/editTextDate"
        android:layout_width="374dp"
        android:layout_height="50dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="33dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Date" />


</LinearLayout>

